{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "MONGODB_URI",
        "PRIVY_APP_ID",
        "PRIVY_APP_SECRET",
        "ALCHEMY_API_KEY",
        "API_SECRET_KEY"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "MONGODB_URI",
        "PRIVY_APP_ID",
        "PRIVY_APP_SECRET",
        "ALCHEMY_API_KEY",
        "API_SECRET_KEY"
      ]
    }
  }
}
